@inject ICarouselService carouselService

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @foreach (var carousel in carouselService.GetCarousels())
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@carousel.Number" class="@(carousel.Number == 0 ? "active": "")"></li>
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var carousel in carouselService.GetCarousels())
        {
            <div class="carousel-item @(carousel.Number == 0 ? "active": "")">
                <img class="d-block w-100" style="max-height:550px" src="~/images/carousels/@carousel.ImageName" alt="@carousel.Alt" />
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>