@page
@model kennel_bambino.web.Pages.Admin.EyeColors.CreateModel

@{
    ViewData["Title"] = "Create new eye color";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle fa-fw"></i> @ViewData["Message"]
    </div>
}

<div class="card border-secondary mb-3">

    <div class="card-header text-capitalize">
        <i class="fa fa-plus fa-fw"></i> @ViewData["Title"]
    </div>

    <div class="card-body">

        <form method="post" autocomplete="off">

            <!-- name -->
            <div class="form-group">
                <label class="form-control-label" asp-for="EyeColor.Name"></label>
                <input type="text" asp-for="EyeColor.Name" class="form-control" />

                <span asp-validation-for="EyeColor.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus fa-fw"></i> Add
                </button>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
