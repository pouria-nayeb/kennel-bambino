@page "{id:min(1)}"
@model kennel_bambino.web.Pages.Admin.EyeColors.DeleteModel

@{
    ViewData["Title"] = "Delete eye color";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle fa-fw"></i> @ViewData["Message"]
    </div>
}

<a asp-page="Index" class="btn btn-primary border border-info text-capitalize my-4">
    <i class="fas fa-arrow-left fa-fw"></i> Back to list
</a>

<div class="card border-secondary mb-3">

    <div class="card-header text-capitalize">
        <i class="fa fa-trash-alt fa-fw"></i> @ViewData["Title"]
    </div>

    <div class="card-body">

        <form method="post">

            <input type="hidden" asp-for="EyeColor.EyeColorId" />

            <div class="table-responsive w-100">
                <table class="table table-borderless table-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>@Model.EyeColor.EyeColorId</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@Model.EyeColor.Name</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-trash-alt fa-fw"></i> Delete
                </button>
            </div>

            <div class="alert alert-primary border border-warning">
                <i class="fa fa-exclamation-triangle fa-fw"></i> This field have some dependencies, be caution if you want to delete.
            </div>

        </form>

    </div>

</div>

