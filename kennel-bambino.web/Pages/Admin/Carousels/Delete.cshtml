@page "{id:min(1)}"
@model kennel_bambino.web.Pages.Admin.Carousels.DeleteModel

@{
    ViewData["Title"] = "Delete carousel";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle fa-fw"></i> @ViewData["Message"]
    </div>
}

<a asp-page="Index" class="btn btn-primary border border-info text-capitalize my-4">
    <i class="fas fa-arrow-left fa-fw"></i> Back to list
</a>

<div class="card border-secondary mb-3">

    <div class="card-header text-capitalize">
        <i class="fa fa-trash-alt fa-fw"></i> @ViewData["Title"]
    </div>

    <div class="card-body">

        <form method="post">

            <input type="hidden" asp-for="Carousel.CarouselId" />

            <div class="table-responsive w-100">
                <table class="table table-borderless table-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>@Model.Carousel.CarouselId</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                <img src="~/images/carousels/@Model.Carousel.ImageName" alt="@Model.Carousel.Alt"
                                     class="rounded fixed-width-image-75" />
                            </td>
                        </tr>
                        <tr>
                            <th>Alt</th>
                            <td>@Model.Carousel.Alt</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-trash-alt fa-fw"></i> Delete
                </button>
            </div>

        </form>

    </div>

</div>

