@page "{id:min(1)}"
@model kennel_bambino.web.Pages.Admin.Carousels.EditModel

@{
    ViewData["Title"] = "Edit carousel";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle fa-fw"></i> @ViewData["Message"]
    </div>
}

<div class="card border-secondary mb-3">

    <div class="card-header text-capitalize">
        <i class="fa fa-plus fa-fw"></i> @ViewData["Title"]
    </div>

    <div class="card-body">

        <form method="post" autocomplete="off" enctype="multipart/form-data">

            <input type="hidden" asp-for="Carousel.CarouselId" />
            <input type="hidden" asp-for="Carousel.ImageName" />

            <div class="row">

                <div class="col-12 col-sm-6">

                    <!-- alt -->
                    <div class="form-group">
                        <label class="form-control-label" asp-for="Carousel.Alt"></label>
                        <input type="text" asp-for="Carousel.Alt" class="form-control" />
                        <small class="form-text text-muted">Write it descriptive, for SEO purposes.</small>

                        <span asp-validation-for="Carousel.Alt" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-12 col-sm-6">

                    <!-- number -->
                    <div class="form-group">
                        <label class="form-control-label" asp-for="Carousel.Number"></label>
                        <input type="number" asp-for="Carousel.Number" class="form-control" />

                        <span asp-validation-for="Carousel.Number" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <!-- carousel -->
            <div class="form-group">
                <div class="input-group my-4 w-100 max-width-520px">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" asp-for="Carousel.ImageName" id="carousel" name="Image" />
                        <label class="custom-file-label" asp-for="Carousel.ImageName">Choose file</label>
                    </div>
                    <img src="~/images/carousels/@Model.Carousel.ImageName" alt="@Model.Carousel.Alt"
                         asp-append-version="true" class="rounded mx-3 fixed-width-image-75" />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-pen fa-fw"></i> Edit
                </button>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#carousel").change(function (event) {
                var fileName = event.target.files[0].name;
                if (fileName.length > 0) {
                    $(this).next().text(fileName);
                }
            });
        });
    </script>
}

